
<div class="row">
	<div class="span4">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),html:{class:"well"}) do |f| %>
		<fieldset>
		  	<legend>Kick in</legend>
		  <%= f.input :email %>
		  <%= f.input :password %>
		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.input :remember_me, as: :boolean %></div>
		  <% end -%>

		  <div><%= f.button :submit, "Sign in" %></div>
			<% end %>
		</fieldset>

	<%= render "devise/shared/links" %>
	</div>

	<div class="span8">
		<h2><legend>Kick in and enjoy </legend></h2><br>
		<h5><p class="lead"><strong>i-World Beta Testing------------Still learning!!!!!!!!!!!!!!!<br>

							making fun is the objective of i-world</strong></p></h5>
	</div>
</div>